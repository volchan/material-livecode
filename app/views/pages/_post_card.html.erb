<div class="col s12 m6 l4">
  <div class="card">
    <div class="card-content">
      <span class="card-title"><%= post.title %></span>
      <p><%= pluralize(post.score, 'point') %> by <b><%= post.author %></b> in <%= post.category %> <%= posted_at_display(post.posted_at) %></p>
    </div>
    <div class="card-action">
      <%= link_to 'go to post\'s website', post.url, target: '_blank' %>
    </div>
  </div>
</div>
