<!-- Modal Trigger -->
  <%= link_to 'Click me !', '#demo-modal', class: 'waves-effect waves-light btn modal-trigger' %>

  <!-- Modal Structure -->
  <div id="demo-modal" class="modal modal-fixed-footer">
    <div class="modal-content">
      <h4>Modal Header</h4>
      <p>A bunch of text</p>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Agree</a>
    </div>
  </div>


<div class="container">
  <div  id='posts-container' class="row">
    <% @posts.each do |post| %>
      <%= render 'post_card', post: post %>
    <% end %>
  </div>
</div>
<div class="fixed-action-btn horizontal">
  <%= link_to '/posts/refresh', class: 'btn-floating btn-large waves-effect waves-light light-blue darken-2 pulse', remote: true do %>
    <i class="large material-icons">sync</i>
  <% end %>
</div>
